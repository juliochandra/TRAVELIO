<% layout('/layouts/base.ejs') %>
    <section class="hero">
        <div class="bg-primary text-white text-center py-5">
            <div class="container">
                <h1 class="display-3">Discover Your Next Adventure</h1>
                <p class="lead">Find the perfect destination for your next trip.</p>
                <a href="#destinations" class="btn btn-lg btn-light">Explore Destinations</a>
            </div>
        </div>
    </section>

    <section class="main  bg-light">
        <div class="py-3 ">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <a href="/api/v1/destinations/create" class="btn btn-primary">Create New Destination</a>
                </div>
            </div>
        </div>

        <div class="container mb-5">
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
                <% destinations.forEach(destination=> { %>
                    <div class="col d-flex align-items-stretch">
                        <div class="card h-100 border-0 shadow transition-ease">
                            <img src="<%= destination.image %>" class="card-img-top rounded-top"
                                alt="<%= destination.name %>">
                            <div class="card-body d-flex flex-column text-center">
                                <h5 class="card-title mb-2 fw-bold fs-6 fs-md-5 fs-lg-4 fs-xl-3">
                                    <%= destination.name %>
                                </h5>
                                <div class="list-group list-group-flush mb-2">
                                    <li class="list-group-item d-flex justify-content-center align-items-center">
                                        <i class="bi bi-geo-alt-fill pe-2"></i> <!-- Bootstrap Icons used -->
                                        <span class="fw-normal text-truncate" title="<%= destination.location %>">
                                            <%= destination.location %>
                                        </span>
                                    </li>
                                </div>
                                <p class="card-text flex-grow-1 text-justify text-clamp">
                                    <%= destination.description %>
                                </p>
                                <a href="/api/v1/destinations/<%= destination.id %>"
                                    class="btn btn-outline-primary mt-auto">Explore</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>


    </section>

    <!-- Additional Custom CSS -->
    <style>
        .hero .container {
            max-width: 900px;
            /* Makes sure the content is not too stretched on very large screens */
        }

        .transition-ease {
            transition: box-shadow 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px -10px rgba(0, 0, 0, 0.25);
        }

        .btn-outline-primary {
            border-width: 2px;
            /* Makes the border of the button thicker */
        }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

        .rounded-top {
            border-top-left-radius: calc(0.375rem - 1px);
            border-top-right-radius: calc(0.375rem - 1px);
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }

        .fw-bold {
            font-weight: 700;
        }

        .card-body {
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            /* Ensures that the button aligns to the bottom */
        }

        .new-destination {
            background-color: #f8f9fa;
            /* Slight background to differentiate the section */
            border-top: 1px solid #eaeaea;
            /* Subtle top border */
            border-bottom: 1px solid #eaeaea;
            /* Subtle bottom border */
        }

        /* Add some animations to your buttons to make them feel dynamic */
        .btn-primary,
        .btn-outline-primary {
            position: relative;
            overflow: hidden;
            transition: color 0.4s, background-color 0.4s;
        }

        .btn-primary::after,
        .btn-outline-primary::after {
            content: '';
            position: absolute;
            top: 0;
            right: -100%;
            bottom: 0;
            left: 0;
            background-image: linear-gradient(120deg, transparent, rgba(255, 255, 255, 0.5), transparent);
            transition: right 0.4s;
        }

        .btn-primary:hover::after,
        .btn-outline-primary:hover::after {
            right: 100%;
        }

        .text-justify {
            text-align: justify;
        }

        .text-clamp {
            display: -webkit-box;
            -webkit-line-clamp: 7;
            /* Number of lines you want to display */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .card-title {
            font-size: calc(1em + 0.5vw);
            /* Adjust the base size and viewport width ratio as needed */
        }

        .text-clamp {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .bi {
            font-size: 1rem;
            /* Adjust icon size */
        }

        .text-truncate {
            max-width: 250px;
            /* Adjust based on your layout */
        }
    </style>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css"
        rel="stylesheet">